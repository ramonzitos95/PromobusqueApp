<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorBackFavoritaPromocao"
            android:layout_marginLeft="6.0dip"
            android:layout_marginTop="6.0dip"
            android:layout_marginRight="6.0dip"
            android:layout_marginBottom="6.0dip"
            app:cardElevation="3dp">

        <LinearLayout android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                          android:layout_height="30.0dip">
                <TextView android:textColor="@color/colorFontItemFavoritaPromocao" android:id="@+id/textView_nomepromocao"
                          android:layout_width="180.0dip" android:layout_height="30.0dip" android:text="Nome"/>
                <TextView android:textColor="@color/colorFontItemFavoritaPromocao" android:id="@+id/textView_datavalidade"
                          android:layout_width="180.0dip" android:layout_height="30.0dip"
                          android:layout_marginLeft="10dip" android:text="Data de validade"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                          android:layout_height="30.0dip">
                <TextView android:textColor="@color/colorFontItemFavoritaPromocao" android:id="@+id/textView_descricao"
                          android:layout_width="370.0dip" android:layout_height="30.0dip" android:text="Descrição"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                          android:layout_height="30.0dip">
                <TextView android:textColor="@color/colorFontItemFavoritaPromocao" android:id="@+id/textView_razaosocial"
                          android:layout_width="180.0dip" android:layout_height="30.0dip" android:text="Razão social"/>
                <TextView android:textColor="@color/colorFontItemFavoritaPromocao" android:id="@+id/textView_cep"
                          android:layout_width="180.0dip" android:layout_height="30.0dip"
                          android:layout_marginLeft="10.0dip" android:text="Cep"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>